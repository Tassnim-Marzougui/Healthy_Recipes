<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HealthyRecipes</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/splash.css" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/apple-touch-icon.png" />
    <meta name="theme-color" content="#FF7F50" />
</head>
<body class="bg-gray-50 font-sans">
    <!-- Splash for account pages -->
    <div id="splash" class="splash-overlay" aria-hidden="false">
        <div class="splash-inner">
            <div class="splash-art">
                <svg class="splash-svg" viewBox="0 0 600 360" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
                    <g class="pot" transform="translate(300,220)">
                        <ellipse cx="0" cy="30" rx="170" ry="30" fill="#3b3b3b" opacity="0.95"></ellipse>
                        <rect x="-160" y="-10" width="320" height="60" rx="28" fill="#2b2b2b"></rect>
                        <rect x="-130" y="-40" width="260" height="30" rx="15" fill="#1f2937"></rect>
                    </g>
                    <g class="veggies">
                        <circle class="veg veg-1" cx="220" cy="40" r="12" fill="#f97316" />
                        <circle class="veg veg-2" cx="260" cy="20" r="10" fill="#facc15" />
                        <circle class="veg veg-3" cx="320" cy="10" r="14" fill="#34d399" />
                        <rect class="veg veg-4" x="360" y="30" width="14" height="8" rx="3" fill="#ef4444" />
                    </g>
                    <g class="smoke" transform="translate(300,60)">
                        <path class="smoke-p1" d="M-30,40 C-10,0 10,0 30,40" fill="none" stroke="#f3f4f6" stroke-width="8" stroke-linecap="round" opacity="0.12" />
                        <path class="smoke-p2" d="M-60,60 C-30,10 30,10 60,60" fill="none" stroke="#f3f4f6" stroke-width="10" stroke-linecap="round" opacity="0.10" />
                    </g>
                    <g class="logo" transform="translate(300,120)">
                        <circle cx="0" cy="0" r="38" fill="#fff3e0" stroke="#fb923c" stroke-width="3"></circle>
                        <text x="0" y="6" text-anchor="middle" font-size="14" font-weight="700" fill="#b45309" font-family="Segoe UI, Roboto, Helvetica, Arial">kH</text>
                    </g>
                </svg>
                <img src="~/images/logo.png" alt="koolHealthy logo" id="splashLogo" class="splash-logo-img" />
            </div>
            <div class="splash-text">
                <h1>Bienvenue sur koolHealthy !</h1>
                <p>Chargement de vos inspirations culinairesâ€¦</p>
            </div>
        </div>
    </div>
    <div class="min-h-screen flex items-center justify-center">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/splash.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>